{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "next", "prettier"],
  "rules": {
    "semi": ["warn"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
